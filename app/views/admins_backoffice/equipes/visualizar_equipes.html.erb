<h1 class="text-center"> EQUIPES </h1>
<div class="d-flex flex-row-reverse bd-highlight">
  <%= form_with(url: admins_backoffice_search_equipe_path, local: true, method: :get) do |equipe| %>
  <div class="p-3 bd-highlight">
    <div class="input-group input-group-button col-sm-12 col-xl-12">
        <%= equipe.text_field :term, class:"form-control", placeholder:"Pesquisar Equipe" %>
          <button type="submit" class="input-group-addon btn btn-primary" id="basic-addon10">
            <span class=""><i class="icofont icofont-ui-search"></i></span>
        </button>
    </div>
</div>
 <% end %>
</div>
<div class="card-block table-border-style">
<div class="table-responsive">
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="text-align: center;">ID</th>
            <th style="text-align: center;">Time</th>
            <th style="text-align: center;">Cartoleiro</th>
            <th style="text-align: center;">Usu√°rio</th>
            <th style="text-align: center;">Deletar</th>
        </tr>
    </thead>
    <tbody>
       <% @equipes.each do |equipe| %>
        <tr>
            <th scope="row" style="text-align: center;"><%= equipe.id %></th>
            <td style="text-align: center;"><%= equipe.nome_time %>  </td>
            <td style="text-align: center;"><%= equipe.cartoleiro %>  </td>
            <td style="text-align: center;"><%= equipe.user.email %>  </td>
           <td style="text-align: center;"> 
          <%= link_to admins_backoffice_equipes_path(:id => equipe), class:"btn btn-danger btn-icon", style:""  do %>
                        
                        <i class="icofont icofont-ui-remove justify-content-center"></i>
        <% end %>          
                </td>    
        </tr>
     <% end %>
    </tbody>
</table>
<h1></h1>
<div class="pagination justify-content-center">
    <%= paginate @equipes %>
 </div>
</div>
</div>

