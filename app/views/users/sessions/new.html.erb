
   
    <section class="login-block">
    
        <!-- Container-fluid starts -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                
                    <!-- Authentication card start -->
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                       
                            <div class="text-center" >
                                <%= image_tag 'logo.png', alt:"Responsive image", class:"" %>
                            </div>
                            <div class="auth-box card">
                                <div class="card-block">
                                    <div class="row m-b-20">
                                        <div class="col-md-12">
                                            <h3 class="text-center">Login</h3>
                                        </div>
                                    </div>
                                    <div class="form-group form-primary">
                                        <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
                                        <span class="form-bar"></span>
                                    </div>
                                    <div class="form-group form-primary">
                                        <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
                                        <span class="form-bar"></span>
                                    </div>
                                    <div class="row ">
                                        <div class="col-12">
                                            <div class="forgot-phone text-center">
                                            <%= link_to 'Esqueceu a sua senha?', new_user_password_path, class:"text-right f-w-600" %>
                                           </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="forgot-phone text-center">
                                            <%= link_to 'NÃ£o tem conta? Cadastre-se.', new_user_registration_path, class:"text-right f-w-600" %>
                                        </div>
                                        <div class="row m-t-30">
                                        <div class="col-md-12">
                                          <%= f.submit "Entrar", class:"btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20" %>
                                  
                                        </div>
                                    </div>
                                                                       
                                </div>
                            </div>
                       <% end %>
                        <!-- end of form -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container-fluid -->
    </section>
    
  
