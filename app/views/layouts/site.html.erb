
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <%= favicon_link_tag(source = "favicon.ico") %>

     <title>Ligas do CFC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'site' %>
    
  

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light bg-primary" >
     
        <%= link_to image_tag("logo-site.png", alt:"Ligas do CFC", class:"img-fluid"), site_welcome_index_path	%>
      
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
       <ul class="navbar-nav mr-auto">
        
        </ul>        
        <%= link_to 'Resultados', site_resultados_index_path, class:"nav-link", style:"color: white;"  %>
        <%= link_to 'Entrar', new_user_session_path, class:"nav-link", style:"color: white;" %>         
        <%= link_to 'Cadastrar-se', new_user_registration_path, class:"nav-link", style:"color: white;" %> 
        </div>
      </nav>
      <!-- Static navbar -->
      <!-- Main component for a primary marketing message or call to action -->
     
      <%= yield %>
    </div> <!-- /container -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>

    <% if notice %>  <!-- Mensagem de cadastro atualizado, criado e etc-->

    <%= javascript_tag do %> 
    
    $.bootstrapGrowl('<%= notice %>', {
        type: 'success',
        align: 'right',
        alow_dismiss: true,
        stackup_spacing: 10

    });
    
    <% end %>
<% end %>
   
  </body>
</html>

