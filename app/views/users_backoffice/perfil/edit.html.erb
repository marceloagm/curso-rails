

 <div class="card-block">
            <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
            <div class="x_title">
            <h2 style="text-align: center;">Dados do Usuário </h2>
            <ul class="nav navbar-right panel_toolbox">
                                             
            </ul>
            <div class="clearfix"></div>
            </div>
            <div class="x_content">
            <% if @user.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    
                    <ul>
                
                    <% @user.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                    <% end %>
                    </ul>

                </div>
                <% end %>
                <%= form_with(url: users_backoffice_perfil_path,model: @user, local: true, class:"form-horizontal form-label-left") do |form| %>

                    <div class="form-group row">
                            <%= form.label :nome, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.text_field :nome, class:"form-control" %>
                            </div>
                    </div>

                    <div class="form-group row">
                            <%= form.label :sobrenome, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.text_field :sobrenome, class:"form-control" %>
                            </div>
                    </div>

                    <div class="form-group row">
                            <%= form.label :rg, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.text_field :rg, class:"form-control " %>
                            </div>
                    </div>

                    <div class="form-group row">
                            <%= form.label :email, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.text_field :email, class:"form-control ", readonly:true %>
                            </div>
                        </div>

                    <div class="form-group row">
                            <%= form.label :password, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.password_field :password, class:"form-control " %>
                            </div>
                        </div>


                    <div class="form-group row">
                            <%= form.label :password_confirmation, class:"col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                            <%= form.password_field :password_confirmation, class:"form-control " %>
                            </div>
                        </div>
                
                    <div class="ln_solid"></div>
                    <div class="form-group">
                    <div style="text-align: center;"class="">
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                    </div>

            <% end %>
            </div>
        </div>
        </div>
    </div>


