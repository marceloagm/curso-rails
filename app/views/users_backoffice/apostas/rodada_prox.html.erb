<h1 class="text-center"> APOSTA RODADA <%= @rodada %> </h1>

<!-- Botão para acionar modal -->
<div style="text-align: center;">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalExemplo">
  Participar
</button>
</div>

<!-- Tabela que lista os times -->
<div class="x_content">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="text-align: center; ">Posição</th>
          <th style="text-align: center; ">Nome do Time</th>
          <th style="text-align: center; ">Cartoleiro</th>     
          <th style="text-align: center; ">Pontos</th>      
        </tr>
      </thead>
      <tbody>
      
        <% @apostas.each do |aposta| %>
        <tr>
          
  

          <td style="text-align: center; ">1</td>
          <td style="text-align: center; "><%= aposta.equipe.nome_time%></td>
          <td style="text-align: center; "><%= aposta.equipe.cartoleiro%></td>
          <td style="text-align: center; ">50</td>
        
        </td>
        </tr>       
        <% end %> 
      </tbody>
    </table>

  </div>

<!-- Modal -->
<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Título do modal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      
       <%= form_with(url: users_backoffice_apostas_path, scope: :aposta, method: :post, local:true) do |f| %>
            
               <%= f.select 'equipe_id', options_for_select(@equipes.collect{ |u| [u.nome_time, u.id] }), {}, {class:"form-control"}  %>
               <%= f.hidden_field :rodada, :value => @rodada %>
                <%= f.hidden_field :action, :value => params[:action] %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        
        <%= f.submit "Salvar", class:"btn btn-primary" %>
      </div>
    </div>
    <%end%>
  </div>
</div>

