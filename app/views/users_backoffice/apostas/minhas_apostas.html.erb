<h1 class="text-center"> MINHAS LIGAS </h1>

<% if @pagamento == [] %>
    <h5 class="text-center" style="color: red;"> Ops! Você ainda não está participando de uma aposta. </h5>
<% else %>

<div class="row">
  <% @pagamento.each do |pagamento| %>
  <div class="col-md-6 col-lg-3">
      <div class="card statustic-card">
          <div class="card-header" style="text-align:center;">
              <h5 >Time : <%= pagamento.equipe.nome_time%></h5>
          </div>
          <div class="card-block text-center">
              <p class="m-b-0">Rodada</p>
              <span class="d-block text-c f-36"><%= pagamento.rodada%></span>
                           
          </div>
          <% if pagamento.status == "Aprovado"%>
          <div class="card-footer bg-c-green">
              <h6 class="text-white m-b-0" style="text-align:center;">Pagamento <%= pagamento.status%></h6>
          </div>
          <% else %>
          <div class="card-footer bg-c-pink">
              <h6 class="text-white m-b-0" style="text-align:center;">Pagamento <%= pagamento.status%></h6>
          </div>
          <% end %>
      </div>
  </div>
  <% end %>
</div>
<% end %>
<div class="pagination justify-content-center">
    <%= paginate @pagamento %>
 </div>